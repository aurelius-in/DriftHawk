FROM python:3.13-slim
WORKDIR /app
COPY ops_bot/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt
COPY ops_bot /app/ops_bot
ARG GIT_SHA=dev
ENV GIT_SHA=$GIT_SHA
EXPOSE 8080
RUN useradd -u 10001 -m appuser && chown -R appuser /app
USER 10001
CMD ["uvicorn","ops_bot.app.main:app","--host","0.0.0.0","--port","8080"]


